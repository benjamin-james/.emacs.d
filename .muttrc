source ~/.config/mutt/colors.linux
set mbox_type=Maildir
set spoolfile="~/.mail/inbox/"
set folder="~/.mail/"
set mask=".*"
#set mask="!^\\.[^.]"
set record="+.Sent"
set postponed="+.Drafts"
mailboxes ! + `\
for file in ~/.mail/.*; do \
    box=$(basename "$file"); \
    if [ ! "$box" = '.' -a ! "$box" = '..' -a ! "$box" = '.customflags' \
       	 -a ! "$box" = '.subscriptions' ]; then \
       echo -n "\"+$box\""; \
    fi; \
done`

set editor="emacsclient -a ''"
